@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}


@if(!Model.Any())
{
    <div class="alert  alert-warning mt-4">
 
    <h4 class="alert-heading ">No Games!</h4>
    <p class="mb-0">No Games Were Added Yet..</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach(var game in Model)
        {
            <div class="col-lg-4 col-mid-6 ">
            
             <a class="card border-primary mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                <div class="card-body" style="background-image: url(@($"{FileSettings.ImagesPath}/{game.Cover}")) ; background-size:cover; background-position:center; height:500px;">
                    <div class="d-flex align-items-end  h-100">
                            <span class="badge bg-primary fs-3 rounded-0">@game.Category?.Name</span>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                            <h5> @game.Name</h5>
                        <div>
                            @foreach(var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon me-2 fs-4"></i>
                            }
                        </div>

                    </div>
                </div>
            </a>
            </div>
        }
    </div>
}